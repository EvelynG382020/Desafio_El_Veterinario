<%= form_with(model: pet_history) do |form| %>
    <% if pet_history.errors.any? %>
        <div id="error_explanation">
            <h2><%= pluralize(pet_history.errors.count, "error") %> prohibited this pet_history from being saved:</h2>

            <ul>
                <% pet_history.errors.each do |error| %>
                    <li><%= error.full_message %></li>
                <% end %>
            </ul>
        </div>
    <% end %>

    <div class="container">
        <div class="field">
            <%= form.label :weight %>
            <%= form.number_field :weight %>
        </div>
