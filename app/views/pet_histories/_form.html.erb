        <div class="field">
            <%= form.label :height %>
            <%= form.number_field :height %>
        </div>
        <br>
        <div class="field">
            <%= form.label :diagnosis %>
            <%= form.text_field :diagnosis %>
        </div>
        <br>
        <div class="field">
            <%= form.label :description %>
            <%= form.text_area :description %>
        </div>
