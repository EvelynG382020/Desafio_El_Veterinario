<p id="notice"><%= notice %></p>

<h1 class="text-center">Todas las Consultas</h1>

<table class="table mt-4">
    <thead class="table table-dark">
        <tr>
        <th class="text-center">Peso</th>
        <th class="text-center">Altura</th>
        <th class="text-center">Diagnóstico</th>
        <th class="text-center">Descripción</th>
        <th class="text-center">Mascota</th>
        <th colspan="3"></th>
        </tr>
    </thead>

    <tbody>
    <% @pet_histories.each do |pet_history| %>
      <tr>
        <td class="text-center"><%= pet_history.weight %> kilos</td>
        <td class="text-center"><%= pet_history.height %> cm</td>
        <td class="text-center"><%= pet_history.diagnosis %></td>
        <td class="text-center"><%= pet_history.description %></td>
        <td class="text-center"><%= pet_history.pet_id %></td>
        <td><%= link_to 'Show', pet_history %></td>
        <td><%= link_to 'Edit', edit_pet_history_path(pet_history) %></td>
        <td><%= link_to 'Destroy', pet_history, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
