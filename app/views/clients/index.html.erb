<p id="notice"><%= notice %></p>

<h1 class="text-center">Clients</h1>

<table class="table mt-4">
  <thead class="table table-dark">
    <tr>
      <th class="text-center">Nombre de Cliente</th>
      <th class="text-center">Teléfono</th>
      <th class="text-center">Email</th>
      <th class="text-center">Número de Mascotas</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clients.each do |client| %>
      <tr>
        <td class="text-center"><%= client.name %></td>
        <td class="text-center"><%= client.phone %></td>
        <td class="text-center"><%= client.email %></td>
        <td class="text-center"><%= client.owned_pets %></td>
        <td><%= link_to 'Más Info', client %></td>
        <td><%= link_to 'Editar', edit_client_path(client) %></td>
        <td><%= link_to 'Borrar', client, method: :delete, data: { confirm: 'Eliminar cliente?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'Back', pages_index_path, class: "btn btn-warning mx-2" %>
<%= link_to 'New Client', new_client_path, class: "btn btn-info mx-2" %>